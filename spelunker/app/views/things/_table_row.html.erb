<tr>
  <td><%= link_to 'view', thing_path(thing) %></td>
  <td>
    <% if thing.has_image? %>
      <%= link_to image_tag(thing.image_url(:small)), thing_path(thing) %>
    <% end %>
  </td>
  <% for field in Thing.attribute_names %>
    <td>
      <% if Facet.all.include?(field) && !thing.send(field).blank? %>
        <%= link_to thing.send(field), facet_thing_path(field, thing.send(field)) %>
      <% else %>
        <%= thing.send(field) %>
      <% end %>
    </td>
  <% end %>
  <td><%= link_to 'view', thing_path(thing) %></td>
</tr>
