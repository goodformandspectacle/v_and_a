<% content_for :pagetitle do %>
<%= @facet %> <% if params[:page] %>(p<%= params[:page] %>)<% end %> : Facets : 
<% end %>

<h1><a href="/facets">Facets</a> / <%= @facet %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Value</th>
      <th># with this value</th>
    </tr>
  </thead>
  <tbody>
    <% for v in @facet_vals %>
      <% unless v.first.blank? %>
        <tr>
          <td><%= link_to v.first, facet_thing_path(@facet, v.first) %></td>
          <td><%= number_with_delimiter(v.last, delimiter: ',') %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= will_paginate @values %>

