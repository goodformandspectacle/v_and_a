<% content_for :pagetitle do %>
<%= @material.name %> <% if params[:page] %>(p<%= params[:page] %>)<% end %> : Materials : Facets : 
<% end %>

<h1><%= link_to 'Facets', facets_path %> / <%= link_to "Materials", facet_path('materials') %> / <%= @material.name %> x <%= number_with_delimiter @count %></h1>

<%= render partial: 'things/toggle_image_list' %>

<% if params[:images] %>
<%= render partial: 'things/imageList', locals: {things: @material_things.map(&:thing)} %>
<% else %>
<%= render partial: 'things/table', locals: {things: @material_things.map(&:thing)} %>
<% end %>

<%= will_paginate @material_things %>
